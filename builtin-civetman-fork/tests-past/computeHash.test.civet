import assert from 'node:assert'
import { computeHash } from '../src/main-refactored.civet'

describe 'computeHash', ->
  it 'should compute the correct SHA1 hash for a given string', ->
    input := 'hello world'
    expectedHash := '2aae6c35c94fcfb415dbe95f408b9ce91ee846ed'
    assert.strictEqual computeHash(input), expectedHash

  it 'should produce different hashes for different inputs', ->
    input1 := 'hello world'
    input2 := 'hello there'
    assert.notStrictEqual computeHash(input1), computeHash(input2)

  it 'should produce the same hash for the same input', ->
    input := 'some random string'
    assert.strictEqual computeHash(input), computeHash(input)
