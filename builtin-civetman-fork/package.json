{
	"name": "civetman-fork",
	"description": "No more pain about civet!",
	"version": "0.0.6",
	"type": "module",
	"repository": "https://github.com/adam2am/civetman-fork",
	"homepage": "https://github.com/adam2am/civetman-fork",
	"bin": {
		"civetman": "./dist/index.js"
	},
	"scripts": {
		"build": "vite build --config vite.config.cli.ts && mv dist/index dist/index.js && cp src/typescript-plugin-civet.cjs dist/",
		"format": "prettier --write . --plugin-search-dir .",
		"dev": "vite build --watch",
		"test:plugin": "node test/test-plugin.cjs",
		"prepublish": "pnpm build"
	},
	"dependencies": {
		"@danielx/civet": "^0.10.4",
		"chokidar": "^4.0.3",
		"commander": "^14.0.0",
		"fast-glob": "^3.2.12",
		"fs-extra": "^11.1.0",
		"jsonc-parser": "^3.3.1",
		"ora": "^8.2.0",
		"picocolors": "^1.0.0",
		"source-map-js": "^1.2.1",
		"type-fest": "^4.41.0",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^22.15.30",
		"@vitejs/plugin-react": "^4.5.1",
		"prettier": "^3.5.3",
		"rollup-plugin-add-shebang": "^0.3.1",
		"tslib": "^2.8.1",
		"vite": "^6.3.5",
		"vite-plugin-civet": "^0.2.5"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"./dist/**/*",
		"tsconfig.json"
	]
}
