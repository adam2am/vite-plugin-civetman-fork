import { describe, it, expect } from 'vitest'
import { computeHash } from '../src/main.civet'

describe 'computeHash', ->
  it 'should compute the correct SHA256 hash for a given string', ->
    input := 'hello world'
    expectedHash := 'b94d27b9934d3e08a52e52d7da7dabfac484efe37a5380ee9088f7ace2efcde9'
    expect(computeHash(input)).toBe(expectedHash)

  it 'should produce different hashes for different inputs', ->
    input1 := 'hello world'
    input2 := 'hello there'
    expect(computeHash(input1)).not.toBe(computeHash(input2))

  it 'should produce the same hash for the same input', ->
    input := 'some random string'
    expect(computeHash(input)).toBe(computeHash(input))
