{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "builtin-civetman-fork/src/**/*.ts",
    "builtin-civetman-fork/src/**/*.civet",
    "builtin-civetman-fork/tests/**/*.civet",
    "builtin-civetman-fork/test-needs-tweaking/**/*.civet"
  ]
}
