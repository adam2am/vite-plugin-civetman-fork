{
  "name": "vite-plugin-civetman-fork",
  "version": "2.3.4",
  "private": false,
  "description": "vite plugin for civetman (civet + watch compile)",
  "keywords": [
    "civet",
    "civetman",
    "vite",
    "plugin"
  ],
  "homepage": "https://github.com/adam2am/vite-plugin-civetman-fork",
  "bugs": {
    "url": "https://github.com/adam2am/vite-plugin-civetman-fork/issues",
    "email": "adam2am@outlook.com"
  },
  "repository": "https://github.com/adam2am/vite-plugin-civetman-fork",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist/*",
    "dist/cli/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build:cli": "bunx vite build builtin-civetman-fork --config builtin-civetman-fork/vite.config.cli.ts",
    "build:tsup": "tsup",
    "build": "bun run build:cli && npm run build:tsup && mkdir -p dist/cli && cp builtin-civetman-fork/dist/index.js dist/cli/index.js && cp -R builtin-civetman-fork/dist/workers dist/cli/",
    "dev": "bunx vite --config vite.config.cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "tsc -p tsconfig.json --noEmit ; eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@danielx/civet": "^0.10.7",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "jsonc-parser": "^3.3.1",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "type-fest": "^5.1.0",
    "micromatch": "^4.0.8"
  },
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@eslint/js": "^9.37.0",
		"@rollup/plugin-typescript": "^12.1.4",
		"@types/fs-extra": "^11.0.4",
		"@types/micromatch": "^4.0.9",
		"@types/node": "^24.7.2",
		"@vitejs/plugin-react": "^5.0.4",
		"eslint": "^9.37.0",
		"eslint-plugin-civet": "^0.0.6",
		"prettier": "^3.6.2",
		"rollup-plugin-add-shebang": "^0.3.1",
		"tslib": "^2.8.1",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-civet": "^0.2.8",
		"vitest": "^3.2.4"
	},
  "peerDependencies": {
    "vite": "^6.0.0"
  },
  "bin": {
    "civetman": "./dist/cli/index.js"
  }
}